{
    "name": "@sandbox/server",
    "version": "1.0.0",
    "description": "Server package with Express and Socket.io",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "ts:check": "tsc --noEmit"
    },
    "dependencies": {
        "@sandbox/common": "*",
        "express": "4.18.2",
        "socket.io": "4.8.1",
        "cors": "2.8.5",
        "lowdb": "7.0.1",
        "morgan": "1.10.0",
        "dotenv-defaults": "5.0.2",
        "dotenv-parse-variables": "2.0.0"
    },
    "devDependencies": {
        "@types/express": "4.17.21",
        "@types/cors": "2.8.17",
        "@types/morgan": "1.9.9",
        "@types/node": "22.5.0",
        "@typescript-eslint/eslint-plugin": "7.15.0",
        "@typescript-eslint/parser": "7.15.0",
        "eslint": "8.57.0",
        "typescript": "5.4.2",
        "tsx": "4.7.1"
    }
}
